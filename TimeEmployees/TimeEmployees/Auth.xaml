<Window x:Class="TimeEmployees.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeEmployees"
        mc:Ignorable="d"
        Title="Авторизация" Height="158" Width="257" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Margin="68,24,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="158"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="20,52,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="68,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="158"/>
        <Button x:Name="InSystem" Content="Выход" HorizontalAlignment="Left" Margin="167,85,0,0" VerticalAlignment="Top" Width="59" Click="OutSystem_Click"/>
        <Button x:Name="OutSystem" Content="Вход" HorizontalAlignment="Left" Margin="68,85,0,0" VerticalAlignment="Top" Width="59" Click="InSystem_Click"/>

    </Grid>
</Window>
